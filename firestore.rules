
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to the expert roadmap templates
    match /roadmaps/{roadmapId} {
      allow read: if true;
      allow write: if false; // Prevent client-side writes to expert roadmaps
    }

    // Allow users to read and write to their own data.
    // In a real production app, this would be secured with Firebase Auth
    // (e.g., `allow read, write: if request.auth.uid != null;`).
    // For this passcode-based system, we are keeping it open for development.
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
