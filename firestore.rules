
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to create their own user document.
      // The `request.auth.uid` must match the `userId` in the path.
      allow create: if request.auth.uid == userId;
      
      // Allow users to read and update their own document after it's created.
      allow read, update: if request.auth.uid == userId;

      // Disallow deleting user documents for data integrity.
      allow delete: if false;
    }
  }
}
